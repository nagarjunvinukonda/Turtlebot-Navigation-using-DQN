<launch>
  <arg name="stage" default="0"/>
  <arg name="method" default="dqn"/>
  <arg name="mode" default="train"/>
  <arg name="reward" default="1"/>
  <arg name="model" default="burger"/>
  <arg name="move_3" default="false"/>
  <arg name="move_4" default="false"/>
  <arg name="move_5" default="false"/>

  <!-- <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/> -->

  <!-- <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_stage_$(arg stage).world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include> 

  <param name="robot_description" command="$(find xacro)/xacro.py $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model turtlebot3_burger -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" /> -->

  <param name="stage_number"  value="$(arg stage)"/>
  <param name="reward"  value="$(arg reward)"/>

  <node pkg="turtlebot3_dqn" type="turtlebot3_dqn_torch.py" name="turtlebot3_dqn" output="screen"
        args="$(arg stage) $(arg method) $(arg mode) $(arg reward)"/>

  <group if="$(arg move_3)">
    <node pkg="turtlebot3_dqn"  type="moving_obstacle" name="moving_obstacle" output="screen" />
  </group>

  <group if="$(arg move_4)">
    <node pkg="turtlebot3_dqn" type="combination_obstacle_1" name="combination_obstacle_1" output="screen" />
    <node pkg="turtlebot3_dqn" type="combination_obstacle_2" name="combination_obstacle_2" output="screen" />
  </group>

  <group if="$(arg move_5)">
    <node pkg="turtlebot3_dqn"  type="move_obstacle_house.py" name="moving_obstacle" output="screen" />
  </group>

</launch>
